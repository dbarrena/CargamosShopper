<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".views.main.picking.pool.PickingPoolFragment"
                                                   android:id="@+id/frameLayout3" android:background="@color/white">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/pickingPoolRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/searchView">
    </androidx.recyclerview.widget.RecyclerView>
    <SearchView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/assignAllBtn"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp" android:queryHint="Buscar"/>
    <Button
            android:text="Asignar todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/assignAllBtn"
            android:background="@drawable/button_yellow_round_border_low_radius" android:textColor="@color/white"
            android:fontFamily="@font/gotham_rounded_medium" android:textAllCaps="false" android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>